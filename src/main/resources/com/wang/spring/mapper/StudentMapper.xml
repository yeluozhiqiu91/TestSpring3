<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wang.spring.dao.StudentDao">
    <select id="findAllStudent" resultType="com.wang.spring.model.Student">
        select * from student
    </select>
    <select id="addStudent" parameterType="com.wang.spring.model.Student">
        INSERT INTO student(name,age) VALUES (#{name},#{age})
    </select>
    <update id="updateStudent" parameterType="com.wang.spring.model.Student">
        UPDATE student set name=#{name},age=#{age} where id=#{id}
    </update>
</mapper>